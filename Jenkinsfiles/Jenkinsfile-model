pipeline {
    agent any
    environment {
        DOCKERHUB_CREDENTIALS = 'dockerhub-creds'
        AZURE_STORAGE_CONNECTION_STRING = credentials('AZURE_STORAGE_CONNECTION_STRING')
    }
    stages {

        stage('Install dependencies') {
            steps {
                sh 'python3 -m pip install --upgrade pip'
                sh 'pip3 install pandas scikit-learn azure-storage-blob'
            }
        }
        
        stage('Train Model') {
            steps {
                echo "Training the model..."
                sh 'python3 Scripts/train.py'
            }
        }

        stage('Upload Model') {
            steps {
                echo "Uploading model and vectorizer to Azure Blob..."
                sh 'python3 Scripts/upload_model.py'
            }
        }
    }
    post {
        success {
            echo "Upload completed successfully."
        }
        failure {
            echo "Upload failed."
        }
    }
}
